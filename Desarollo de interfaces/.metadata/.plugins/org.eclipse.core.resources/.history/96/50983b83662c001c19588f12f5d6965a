	public static void ING_ESP() {
		PREGUNTA.addAll(ENG);
		RESPUESTA.addAll(ESP);
		
	}
	
	public static void ESP_ENG() {
		PREGUNTA.addAll(ESP);
		RESPUESTA.addAll(ENG);
	}
	
	public static void indiferente() {
		PREGUNTA.addAll(ESP);
		PREGUNTA.addAll(ENG);
		
		RESPUESTA.addAll(ENG);
		RESPUESTA.addAll(ESP);
		
		
	}
}
