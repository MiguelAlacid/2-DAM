package view;

import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JCheckBox;
import javax.swing.JTextField;
import javax.swing.JLabel;
import java.awt.Font;
import javax.swing.JRadioButton;
import javax.swing.JComboBox;
import javax.swing.*;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

public class frmConfig extends JFrame {

	private JPanel contentPane;
	private JTextField textField;
	public static JButton btnAceptar;
	public static JFrame frmConfig;

	/**
	 * Create the frame.
	 */
	public frmConfig() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 450, 300);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		contentPane.setLayout(null);

		JCheckBox chckbxNewCheckBox = new JCheckBox("TOTAL MAX PALABRAS: " + model.Languages.ENG.size());
		chckbxNewCheckBox.setFont(new Font("Tahoma", Font.PLAIN, 14));
		chckbxNewCheckBox.setBounds(58, 22, 181, 23);
		contentPane.add(chckbxNewCheckBox);

		textField = new JTextField();
		textField.setBounds(273, 25, 61, 20);
		contentPane.add(textField);
		textField.setColumns(10);

		JLabel lblNewLabel = new JLabel("Modo pregunta:");
		lblNewLabel.setFont(new Font("Tahoma", Font.PLAIN, 17));
		lblNewLabel.setBounds(49, 68, 133, 23);
		contentPane.add(lblNewLabel);
		
		ButtonGroup bgTipoTraduccion = new ButtonGroup();

		JRadioButton rdbtnNewRadioButton = new JRadioButton("ESP -> ING");
		rdbtnNewRadioButton.setBounds(58, 108, 109, 23);
		contentPane.add(rdbtnNewRadioButton);

		JRadioButton rdbtnNewRadioButton_1 = new JRadioButton("ING -> ESP");
		rdbtnNewRadioButton_1.setBounds(58, 134, 109, 23);
		contentPane.add(rdbtnNewRadioButton_1);

		JRadioButton rdbtnNewRadioButton_2 = new JRadioButton("indiferente");
		rdbtnNewRadioButton_2.setBounds(58, 160, 109, 23);
		contentPane.add(rdbtnNewRadioButton_2);

		bgTipoTraduccion.add(rdbtnNewRadioButton);
		bgTipoTraduccion.add(rdbtnNewRadioButton_1);
		bgTipoTraduccion.add(rdbtnNewRadioButton_2);

		btnAceptar = new JButton("Aceptar");
		btnAceptar.setBounds(141, 190, 143, 34);
		btnAceptar.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				
				frmConfig.setVisible(false);
				new view.FrmPrincipal();
				ctrl.CtrlPrincipal.inicio();
			}
		});
		contentPane.add(btnAceptar);
		setVisible(true);

	}
}
